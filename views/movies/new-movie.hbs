<div>
  <h2>New movie</h2>

  <form action="/movies/create" method="post">
    <label class="formm-label" for="title">Title</label>
    <input class="form-control" type="text" name="title" />

    <label class="form-label" for="genre">Genre</label>
    <input class="form-control" type="text" name="genre" />

    <label class="form-label" for="plot">Plot</label>
    <input class="form-control" type="text" name="plot" />

    <label class="form-label" for="celebrity">Celebrity</label>
    <select class="form-select" name="celebrity" multiple="true">

      {{#each listCelebrities}}

        <option value="{{this._id}}">{{this.name}}</option>

      {{/each}}

    </select>

    <button type="button" class="btn btn-outline-success">Add</button>

  </form>
</div>